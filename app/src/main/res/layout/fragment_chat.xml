<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".chat.Fragment_Chat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="11.5"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:title="헬시코기"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:scrollbars="none"
            />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:scrollbars="none"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/medicine_check1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="테스트1"
                android:textSize="20dp"
                android:gravity="center"
                android:background="#cbcba9"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/medicine_check2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="테스트2"
                android:textSize="20dp"
                android:gravity="center"
                android:background="#cbcba9"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/medicine_check3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="테스트3"
                android:textSize="20dp"
                android:gravity="center"
                android:background="#cbcba9"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/medicine_check4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="테스트4"
                android:textSize="20dp"
                android:gravity="center"
                android:background="#cbcba9"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/medicine_check5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="테스트5"
                android:textSize="20dp"
                android:gravity="center"
                android:background="#cbcba9"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/medicine_check6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="테스트6"
                android:textSize="20dp"
                android:gravity="center"
                android:background="#cbcba9"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1.4"
        android:weightSum="10"
        >
        <EditText
            android:id="@+id/chat_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/send_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="전송"
            android:layout_marginBottom="10dp"
            />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>